{
  "name": "@mercadoni/elementals",
  "version": "0.7.3-alpha.0",
  "description": "Building blocks for NodeJS services",
  "repository": {
    "type": "git",
    "url": "git://github.com/mercadoni/elementals.git"
  },
  "author": "Carlos Rodr√≠guez <cerodriguezl@gmail.com>",
  "bugs": {
    "url": "https://github.com/mercadoni/elementals/issues"
  },
  "homepage": "https://github.com/mercadoni/elementals#readme",
  "engines": {
    "node": ">=8.0.0"
  },
  "types": "**/*.d.ts",
  "scripts": {
    "lint": "standardx --verbose {src,test}/**/*.ts",
    "lint-fix": "standardx --verbose {src,test}/**/*.ts --fix || exit 0",
    "copypackage": "cp -rf package.json dist",
    "build": "rm -rf dist && tsc && npm run copypackage",
    "tar": "npm run build && cd dist && npm pack",
    "dist": "npm run build && cd dist && npm publish",
    "test": "jest --coverage --logHeapUsage"
  },
  "dependencies": {
    "@aws-crypto/client-node": "^1.0.5",
    "@types/amqp-connection-manager": "^2.0.10",
    "@types/flat": "^5.0.1",
    "@types/lodash": "^4.14.160",
    "@types/logfmt": "^1.2.1",
    "@types/nconf": "^0.10.0",
    "@types/node": "^13.13.15",
    "@types/node-schedule": "^1.3.0",
    "@types/verror": "^1.10.4",
    "amqp-connection-manager": "^3.2.0",
    "amqplib": "^0.5.6",
    "flat": "^5.0.0",
    "lodash": "^4.17.20",
    "logfmt": "^1.3.2",
    "maskdata": "^1.1.2",
    "nconf": "^0.10.0",
    "node-schedule": "^1.3.2",
    "prom-client": "^11.5.3",
    "verror": "^1.10.0",
    "winston": "^3.2.1"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.3.0",
    "standardx": "^5.0.0",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.5"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "standard"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ]
  }
}
