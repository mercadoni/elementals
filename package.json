{
  "name": "@mercadoni/elementals",
  "version": "0.6.5-alpha.1",
  "description": "Building blocks for NodeJS services",
  "repository": {
    "type": "git",
    "url": "git://github.com/mercadoni/elementals.git"
  },
  "author": "Carlos Rodr√≠guez <cerodriguezl@gmail.com>",
  "bugs": {
    "url": "https://github.com/mercadoni/elementals/issues"
  },
  "homepage": "https://github.com/mercadoni/elementals#readme",
  "engines": {
    "node": ">=8.0.0"
  },
  "types": "**/*.d.ts",
  "scripts": {
    "lint": "standardx --verbose src/**/*.ts",
    "lint-fix": "standardx --verbose src/**/*.ts --fix",
    "copypackage": "cp -rf package.json dist",
    "build": "rm -rf dist && tsc && npm run copypackage",
    "dist": "npm run build && cd dist && npm publish"
  },
  "dependencies": {
    "@types/amqp-connection-manager": "^2.0.6",
    "@types/flat": "0.0.28",
    "@types/logfmt": "^1.2.1",
    "@types/nconf": "^0.10.0",
    "@types/node": "^13.7.4",
    "@types/node-schedule": "^1.3.0",
    "@types/verror": "^1.10.3",
    "amqp-connection-manager": "^2.3.3",
    "amqplib": "^0.5.5",
    "flat": "^5.0.0",
    "logfmt": "^1.3.2",
    "nconf": "^0.10.0",
    "node-schedule": "^1.3.2",
    "prom-client": "^11.5.3",
    "verror": "^1.10.0",
    "winston": "^3.2.1"
  },
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "standardx": "^5.0.0",
    "typescript": "^3.8.2"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "standard"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  }
}
